{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "esnext",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@shared/*": ["app/shared/*"],
      "@talent/*": ["app/talent/*"],
      "@image/*": ["app/image/*"],
      "@video/*": ["app/video/*"],
      "@media/*": ["app/media/*"]
    },
    "lib":[
      "es2018",
      "esnext",
      "dom"
    ]
  }
}
